= form_with url: search_path, method: :get, local: true do |f|
  #search-wrap.form-inline.product_form
    .form-group
      = f.text_field :content , id: "search-text"
      = f.hidden_field :model, :value => "product"
      = f.hidden_field :method, :value => "patical"
    .input-group
      %button.btn.header-search-button{:type => "submit"}
        %i.fas.fa-search.header-search-icon
