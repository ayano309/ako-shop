<header>
      <nav class="navbar navbar-expand-md navbar-light  ">
        <div class="container">
          <a class="navbar-brand" href="/">Ako-shop</a>
    
          <form class="form-inline">
            <div class="form-group">
              <input class="form-control header-search-input">
            </div>
            <div class="input-group">
              <button type="submit" class="btn header-search-button"><i class="fas fa-search header-search-icon"></i></button>
            </div>
          </form>
          
          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
              <%= link_to "#", id: "Dropdown", class: "mx-auto",
              role: "button", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" } do %>
                  <p>CATEGORY</p><span class="caret"></span>
              <% end %>
              <div class="dropdown-menu dropdown-menu" aria-labelledby="navbarDropdown">
              <% @categories = Category.all%>
                <% @categories.each do |category| %>
                  <%= link_to category.name, products_path(category: category.id) %><br>
                <% end %>                  
              </div>
            </li>
          </ul>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <!-- Right Side Of Navbar -->
              <ul class="navbar-nav ml-auto">
              
              <% if user_signed_in? %>
                <li class="nav-item dropdown">
                  <%= link_to "#", id: "navbarDropdown", class: "nav-link ",
                  role: "button", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" } do %>
                      <%= current_user.name %> <span class="caret"></span>様
                  <% end %>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to  "マイページ", mypage_users_path, class: "dropdown-item"%>
                    <%= link_to "お気に入り", mypage_favorite_users_path, class: "dropdown-item"%>
                    <%= link_to "購入履歴", mypage_purchases_users_path, class: "dropdown-item"%>
                    <%= link_to "アカウント設定", mypage_show_users_path, class: "dropdown-item"%>
                    <%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item" %>   
                    

                  </div>
                </li>
                <li class="nav-item mr-5">
                  <%= link_to cart_users_path, class: "nav-link" do %>
                    <i class="fas fa-shopping-cart fa-2x"></i>
                  <% end %>
                </li>
                
                

              <% else %>
                <li class="nav-item dropdown">
                  <%= link_to "#", id: "navbarDropdown", class: "nav-link ",
                  role: "button", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" } do %>
                    <P>ログイン</P><span class="caret"></span>
                  <% end %>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
                    <%= link_to "新規会員登録", new_user_registration_path, class: "nav-link" %>                  
                  </div>
                </li>

              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>