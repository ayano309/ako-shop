<div class="container d-flex justify-content-center mt-3">
  <div class="w-75 content">
    <h2>カートに入っているアイテム</h2>

    <div class="offset-8 col-4">
      <div class="row">
        <div class="col-6">
          <h3>数量</h3>
        </div>
        <div class="col-6">
          <h3>小計</h3>
        </div>
      </div>
    </div>

    <hr>

    <div class="row">
      <% @user_cart_items.each do |user_cart_item| %>
        <% product = Product.find(user_cart_item.item_id) %>
        <div class="col-md-2 mt-2">
          <%= link_to product_path(product) do %>
              <%= image_tag "salt.png", class: "img-fuild w-100" %>
          <% end %>
        </div>
        <div class="col-md-6 mt-4">
          <h3 class="mt-4"><%= product.name %></h3>
        </div>
        <div class="col-md-2">
          <h3 class="w-100 mt-4"><%= user_cart_item.quantity %></h3>
        </div>
        <div class="col-md-2">
          <h3 class="w-100 mt-4">￥<%= user_cart_item.price_cents * user_cart_item.quantity %></h3>
        </div>
        <hr>
      <% end %>
    </div>

    <hr>

    <div class="offset-8 col-4">
      <div class="row">
        <div class="col-6">
          <h2>合計</h2>
        </div>
        <div class="col-6">
          <h2>￥<%= @user_cart.total.fractional / 100 %></h2>
          <%# acts_as_shopping_cartで用意されているtotalメソッドを使用し、現在のカート（@user_cart）の合計金額を表示 %>
          <%# @user_cart.total.fractional / 100のように記述して小数点のない日本円表示 %>
        </div>
        <div class="col-12 d-flex justify-content-end">
          表示価格は税込みです
        </div>
      </div>
    </div>
    <%= form_with url: cart_users_path , method: :delete, class: " mt-3" do |f| %>
      <%= f.submit "注文画面へ進む", class:"btn btn-primary  mx-auto d-block mb-3" %>
      <%= link_to "ショッピングを続ける", products_path, class: "link d-flex justify-content-center"%>
    <% end %>
      

  </div>
</div>