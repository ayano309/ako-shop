= form_with url: cart_users_path , method: :delete, class: " mt-3" do |f|
  .btn.btn-primary.mx-auto.d-block.mb-3{"data-target" => "#buy-confirm-modal", "data-toggle" => "modal"} 注文画面へ進む
  #buy-confirm-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "staticBackdropLabel", "data-backdrop" => "static", "data-keyboard" => "false", :role => "dialog", :tabindex => "-1"}
    .modal-dialog
      .modal-content
        .modal-header
          %h5#staticBackdropLabel.modal-title 購入を確定しますか？
          %button.close{"aria-label" => "閉じる", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} ×
        .modal-footer
          %button.btn.favorite-button.border-dark.text-dark{"data-dismiss" => "modal", :type => "button"} 閉じる
          %button.btn.btn-primary.submit-button{:type => "submit"} 購入
  = link_to "ショッピングを続ける", products_path, class: "link d-flex justify-content-center"
