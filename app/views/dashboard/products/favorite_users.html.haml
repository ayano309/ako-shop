.container.d-flex.justify-content-center.mt-3
  .w-75.content
    %h2 予約商品
    %hr/
    %table.table.table-responsive.mt-5
      %thead
        %tr
          %th{:scope => "col"} 商品
          %th{:scope => "col"} id
          %th{:scope => "col"} name
          %th{:scope => "col"} mail
          %th{:scope => "col"} tel
      %tbody
        - @products.each do |product|
          - product.likers(User).each do |user|
            %tr
              %td
                - if product.image.attached?
                  = image_tag product.image, :size => '100x100'
                - else
                  = image_tag "salt.png", :size => '100x100'
              %td= user.id
              %td= user.name
              %td= user.email
              %td= user.phone
    %hr/
