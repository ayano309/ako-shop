.w-75
  = form_with(model: @category, url: dashboard_categories_path, local: true) do |f|
    .form-group
      = f.label :name, "カテゴリ名"
      = f.text_field :name, class: "form-control"
    .form-group
      = f.submit "新規作成", class: "btn btn-primary"
  %table.table.mt-5.content
    %thead
      %tr
        %th.w-25{:scope => "col"} ID
        %th{:scope => "col"} カテゴリ
        %th{:scope => "col"}
        %th{:scope => "col"}
    %tbody
      - @categories.each do |category|
        %tr
          %th{:scope => "row"}
            = category.id
          %td= category.name
          %td
            = link_to "編集", edit_dashboard_category_path(category), class: "btn btn-outline-success  btn-sm "
          %td
            = link_to "削除", dashboard_category_path(category), method: :delete, class: " btn btn-outline-danger btn-sm "
  = paginate @categories
